name: ðŸ¤– Trigger Copilot Migration Agent
on:
  issues:
    types: [labeled]

jobs:
  initiate_migration:
    if: github.event.label.name == 'declaration-keys-migration-request'
    runs-on: ubuntu-latest
    permissions:
      issues: write
      contents: write
      pull-requests: write

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Install Copilot CLI
        run: gh extension install github/gh-copilot

      - name: ðŸš€ Run Copilot Agent Logic
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          ISSUE_BODY: ${{ github.event.issue.body }}
        run: |
          # Instead of assigning, we pass the issue data directly to Copilot
          # This command tells Copilot to apply the tables from the issue to your code
          gh copilot suggest "Apply the Add/Update/Delete changes from Issue #${{ github.event.issue.number }} to DeclarationTable.cs" --target shell
          
      - name: Create Pull Request
        uses: peter-evans/create-pull-request@v6
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          commit-message: "feat: automated declaration update by Copilot Agent"
          title: "Migration: ${{ github.event.issue.title }}"
          body: "Automated update based on Issue #${{ github.event.issue.number }}. Agent used instructions from .github/copilot-instructions.md."
          branch: "copilot-migration/issue-${{ github.event.issue.number }}"
